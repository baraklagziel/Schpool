<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/size"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlue"
    tools:context=".AppActivity">
<!--    android:background="@color/lightPurple"-->


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="135dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="126dp"
        app:srcCompat="@drawable/school_location_logo122" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/button_ride_in_schpool"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_drive_in_schpool"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/ride_backgroung"
        android:drawableLeft="@drawable/man_logo_size"
        android:drawablePadding="4dp"
        android:paddingLeft="14dp"
        android:text="Ride in schpool" />

    <Button
        android:id="@+id/button_drive_in_schpool"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="135dp"
        android:background="@drawable/ride_backgroung"
        android:drawableLeft="@drawable/car_logo_size"
        android:drawablePadding="4dp"
        android:paddingLeft="17dp"
        android:text="Drive in schpool" />

    <TextView
        android:id="@+id/textView_welcome_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="189dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/quicksand_medium"
        android:gravity="clip_horizontal"
        android:shadowColor="#707070"
        android:text="WELCOME TO"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView_schpool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="241dp"
        android:fontFamily="@font/quicksand"
        android:gravity="center_horizontal"
        android:shadowColor="#707070"
        android:text="Schpool "
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_schpool"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="61dp"
        android:layout_marginTop="29dp"
        android:fontFamily="@font/quicksand_medium"
        android:shadowColor="#707070"
        android:text="Get a ride with school mate"
        android:textColor="#000000"
        android:textSize="18sp" />


</RelativeLayout>